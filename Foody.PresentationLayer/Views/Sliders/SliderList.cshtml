@using Foody.DtoLayer.Dtos.SliderDtos


@model List<ResultSliderDto>

@{
    ViewData["Title"]="SliderList";
    Layout="~/Views/Shared/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Tables</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">SliderLists</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Slider Operations</a>
                </li>
            </ul>
        </div>
        <div class="row">

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hoverable Table</div>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Slider Id</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                    @foreach (var item in Model)
                                    {    <tr>
                                        <td>@item.SliderId</td>
                                        <td>@item.Title</td>
                                        <td><a href="/Sliders/DeleteSLider/@item.SliderId" class="btn btn-danger">Delete</a></td>
                                        <td><a href="/Sliders/UpdateSLider/@item.SliderId" class="btn btn-success">Update</a></td>
                                        </tr>
                                    }
                            </tbody>
                        </table>
                        <td><a href="/Sliders/CreateSlider" class="btn btn-primary">Add New Slider</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>